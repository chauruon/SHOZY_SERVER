    <div class="layout-login__overlay"></div>
    <div class="layout-login__form bg-white form-height"
            data-perfect-scrollbar>
        <div class="d-flex justify-content-center mt-2 mb-5 navbar-light">
            <a href="/"
                class="navbar-brand"
                style="min-width: 0">
                <img class="navbar-brand-icon"
                        src="../images/shoes_logo.png"
                        width="200"
                        alt="">
                <span>SHOZY</span>
            </a>
        </div>
        <h4 class="m-0 fs-1">Welcome back!</h4>
        <p class="mb-5">Register to access your Shozy Account</p>
        
        <form action="/register/user" method="POST" id="form">
            <div style="color: red; font-weight: bold;"  id="count_down" ></div>
            <div class="form-group">
                <label class="text-label">Họ và Tên</label>
                <div class="input-group input-group-merge">
                    <input class="form-control form-control-prepended"
                        id="username"
                        name="username"
                        oninvalid="this.setCustomValidity('Vui lòng nhập họ và tên!')"
                        onchange="this.setCustomValidity('')"
                        maxlength="50"
                        placeholder="Nhập họ và tên">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="far fa-user"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="text-label">Số điện thoại</label>
                <div class="input-group input-group-merge">
                    <input class="form-control form-control-prepended"
                        id="numPhone"
                        name="numPhone"
                        oninvalid="this.setCustomValidity('Vui lòng nhập tên tài khoản!')"
                        onchange="this.setCustomValidity('')"
                        required=""
                        maxlength="50"
                        placeholder="Nhập tên tài khoản">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="far fa-user"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="text-label"
                        for="password">Mật khẩu</label>
                <div class="input-group input-group-merge">
                    <input class="form-control form-control-prepended"
                        id="password"
                        name="password"
                        type="password"
                        oninvalid="this.setCustomValidity('Vui lòng nhập mật khẩu!')"
                        onchange="this.setCustomValidity('')"  
                        maxlength="50"
                        placeholder="Nhập mật khẩu">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <span class="fa fa-key"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="text-label">Địa chỉ</label>
                <div class="input-group input-group-merge">
                    <input class="form-control form-control-prepended"
                        id="address"
                        name="address"
                        oninvalid="this.setCustomValidity('Vui lòng nhập địa chỉ!')"
                        onchange="this.setCustomValidity('')"
                        maxlength="50"
                        placeholder="Nhập tên địa chỉ">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="far fa-user"></i>
                        </div>
                    </div>
                </div>
            </div>            
            <div class="form-group text-center">
                <button id="register"  type="submit" class="btn btn_login btn-primary ml-5 mb-5">Đăng ký</button>
            </div>
        </form>
    </div>


